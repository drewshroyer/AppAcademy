
<% if action == :edit %>
<% action_url = band_url(band) %>
<% else%>
<% action_url = bands_url %>
<% end%>

<form action="<%= bands_url %>" method="post">
<% if action == :edit %>
<input type="hidden" name="_method" value="PATCH" >
<% end %>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<label for="title">Artist: </label>
<input id="title" type="text" name="band[name]">

<input type="submit" value="Add Artist to your Library" value="<%= (action == :edit) ? 'update band' : 'add band'%>">

</form>