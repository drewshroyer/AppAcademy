
<% if action == :edit %>
<% action_url = goal_url(@goal)%>
<% else %>
<% action_url = goals_url %>
<% end %>

<form action="<% goals_url %>" method="post">
<% if action == :edit %>
<input type="hidden" name="_method" value="PATCH" >
<% end %>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<label for="title">Goal Name: </label>
<input id="title" type="text" name="goal[name]">
<br>
<label for="visibilty">Visibilty: </label>
<select id="visibilty" name="goal[visibilty]">
<option  value="private">Private</option>
<option  value="private">Public</option>
</select>
<br>
<br>
<input type="submit" value="Reach your goal!">
</form>