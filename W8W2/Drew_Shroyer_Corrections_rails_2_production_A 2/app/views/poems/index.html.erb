<h1>All Poems</h1>

<form action="<%= poems_url %>" method="POST">
<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
<a href="<%= new_poem_url %>">Create New Poem</a>
</form>

<% @poems.each do |poem| %>
<%= poem.title %>
<% if poem.complete == true %>
    Done
<% end %>
<%= poem.stanzas %>
<form action="<%= edit_poem_url(poem) %>" method="POST">
<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
<input type="hidden" name="_method" value="PATCH">
<a href="<%= edit_poem_url(poem) %>"> Edit Poem </a>
</form>
<% end %>